
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textSecuredApplications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="5dp"
            android:text="Secured Applications"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            />
        <GridView
            android:id="@+id/gridThirdAppsSecured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:numColumns="3"
            android:visibility="gone"
            />
    <TextView
        android:id="@+id/textUnsecuredApplications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="Unsecured Applications"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        />


        <GridView
            android:id="@+id/gridThirdApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:numColumns="3"
            android:visibility="gone"/>


    </LinearLayout>