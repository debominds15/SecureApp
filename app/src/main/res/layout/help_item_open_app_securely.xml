<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlider1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_4_title"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/slide_title"
        android:id="@+id/txtSlider1_header"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:text="@string/slide_4_desc"
        android:id="@+id/txtSlider1_body"
        android:textAlignment="center"
        android:layout_below="@+id/imgAppIcon"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/slide_desc"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true" />

    <ViewFlipper
        android:id="@+id/viewFlipper1"
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/img_width_height"
            android:src="@drawable/open_app_sec_1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Lock Screen won't be displayed"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal|center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/img_width_height"
            android:src="@drawable/open_app_sec_2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </ViewFlipper>


</RelativeLayout>